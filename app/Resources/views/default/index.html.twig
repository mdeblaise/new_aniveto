            <div class="row no-gutters">
                <div class="col-lg-4 col-xl-6 d-none d-lg-block d-flex align-items-center">

                </div>
                <div class="col-12 col-lg-8 col-xl-6">
                    <div class="section-hero-title text-center">
                        <div>
                            <h2 class="section-hero-title-main text-uppercase text-center">
                                {{ 'home.bloc-image.title'|trans }}
                            </h2>
                            <button class="btn btn-primary-green">
