{% extends 'base.html.twig' %}

{% block body %}
    <section id="bgImage" class="section-hero">
        <div class="section-banner">
            <div class="container">
                <h1 class="section-banner-title">{{ 'home.accroche'|trans }}</h1>
            </div>
        </div>
        <img src="{{ asset('bundles/app/img/home/bg.jpg') }}" class="section-image-mobile">
