{% extends 'base.html.twig' %}

{% block body %}

    <!-- Breadcrum -->
    <div class="row bs-wizard col-lg-4 offset-md-4" style="border-bottom:0;">
        <div class="col-4 bs-wizard-step complete">
          <div class="text-center bs-wizard-stepnum">Mon profil</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
        </div>

        <div class="col-4 bs-wizard-step complete"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">Mon animal</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
        </div>

        <div class="col-4 bs-wizard-step disabled"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">Mon tarif</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
        </div>
    </div>

    <form action="{{ path('app.animal', {id: id}) }}" method="post" class="container-fluid py-3">
        {{ form_widget(form._token) }}

        <div class="form-group row">
            <label>{{ form_label(form.name) }}</label>
            {{ form_widget(form.name, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.species) }}</label>
            {{ form_widget(form.species, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.species) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.gender) }}</label>
            {{ form_widget(form.gender, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.gender) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.breed) }}</label>
            {{ form_widget(form.breed, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.breed) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.dateOfBirth) }}</label>
            {{ form_widget(form.dateOfBirth, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.dateOfBirth) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.isVaccinated) }}</label>
            {{ form_widget(form.isVaccinated, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.isVaccinated) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.isIdentified) }}</label>
            {{ form_widget(form.isIdentified, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.isIdentified) }}
        </div>
        <div class="form-group row">
            <label>{{ form_label(form.isSterilized) }}</label>
            {{ form_widget(form.isSterilized, {
                attr: { class: 'form-control'}
            })}}
            {{ form_errors(form.isSterilized) }}
        </div>

        <div class="form-group row">
            <input type="submit" class="btn btn-large btn-primary-green btn-block" value="{{ 'animal.rate'|trans }}" />
        </div>
    </form>

    <!-- Help -->
    <div class="pt-5">
        <div class="mk-help">
            <h4 class="text-center">Besoin d'aide ? Appelez-nous !</h4>
            <h1 class="text-center">09 70 100 500</h1>
        </div>
    </div>

{% endblock %}